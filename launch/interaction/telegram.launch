<?xml version="1.0"?>
<launch>

    <arg name="token" doc="Token for the Telegram API"/>

    <!-- Get the machine file -->
    <arg name="machine" default="localhost"/>

    <include file="$(env ROBOT_BRINGUP_PATH)/machines/$(arg machine).machine" />
	
    <!-- Telegram ROS Bridge -->
    <node name="telegram_ros_bridge" pkg="telegram_ros" type="telegram_ros_bridge" output="screen" respawn="true">
        <param name="token" value="$(arg token)" />
        <!-- TODO: Not sure what this hould be <param name="caption_as_frame_id" value="false" /> -->
        <remap from="message_to_ros" to="message_from_telegram" />
        <remap from="message_from_ros" to="message_to_telegram" />
        <remap from="image_to_ros" to="photo_from_telegram" />
        <remap from="image_from_ros" to="photo_to_telegram" />
    </node>
		
 </launch>
